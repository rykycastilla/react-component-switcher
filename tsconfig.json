{
  "compilerOptions": {
    "target": "es2016",                                  
    "jsx": "react-jsx",                                
    "module": "commonjs",  
    "esModuleInterop": true,                              
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",                              
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true ,
    "removeComments": true,                             
  }
}
